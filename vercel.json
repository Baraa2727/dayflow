{
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },

    // Statische Dateien & Manifest direkt ausliefern:
    { "src": "/(.*)\\.(png|jpg|jpeg|webp|svg|ico|json|css|js)", "dest": "/$1.$2" },

    // Startseite & alle anderen Pfade -> index.html
    { "src": "/", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
